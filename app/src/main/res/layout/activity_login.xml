<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBg"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:background="@mipmap/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/inputParentMargin">

        <EditText
            android:id="@+id/edTcNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputHeight"
            android:textColor="@color/black"
            android:hint="@string/hint_tc_no"
            android:inputType="number"
            android:maxLength="11"
            android:text="11111111116"
            android:padding="@dimen/inputInnerPadding"
            android:layout_marginBottom="@dimen/componentBetweenMargin"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:background="@mipmap/textarea"/>

        <EditText
            android:id="@+id/edTelefon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/inputHeight"
            android:textColor="@color/black"
            android:hint="@string/hint_telefon"
            android:padding="@dimen/inputInnerPadding"
            android:maxLength="11"
            android:text="5420001517"
            android:inputType="numberPassword"
            android:layout_marginBottom="@dimen/componentBetweenMargin"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:background="@mipmap/textarea" />

        <ImageButton
            android:layout_width="@dimen/loginBtnWidth"
            android:layout_height="@dimen/loginBtnHeight"
            android:background="@drawable/login_selector"
            android:layout_gravity="center"
            android:onClick="login"/>
    </LinearLayout>





</RelativeLayout>